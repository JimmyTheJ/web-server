<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/dist/main.css" asp-append-version="true" type="text/css" />
        <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" type="text/css" />
    </environment>
</head>

<body>
    @RenderBody()

    <script src="~/dist/vendor.js" asp-append-version="true" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>

</html>
